#!/bin/bash

# Function definition with parameters
mange() {
  local namespace="$1"
  local repo="$2"
  local rows="$3"
  local method="${4:-csv}"

  echo "namespace ..: $namespace"
  echo "repo name ..: $repo"
  echo "row count ..: $rows"
  echo "method .....: $method"

  rm -fr "/data2/mvdata/data/${namespace}_${repo}"

  python3 mange_csv.py \
  --output="/data2/mvdata/data/${namespace}_${repo}" \
  --rows=$rows \
  --method="${method}" \
  --file="/data2/github-slurp/data/${namespace}_${repo}/${repo}_issues.csv"

  python3 mange_csv.py \
  --output="/data2/mvdata/data/${namespace}_${repo}" \
  --rows=$rows \
  --method="${method}" \
  --file="/data2/github-slurp/data/${namespace}_${repo}/${repo}_pull_requests.csv"

}

cd /data2/github-slurp
source .venv/bin/activate
cd /data2/github-slurp/helpers

#mange "frappe" "erpnext" 18000 "zip"
#mange "tensorflow" "tensorflow" 18000 "zip"
#mange "odoo" "odoo" 18000 "zip"
#mange "OWASP" "Nettacker" 18000 "zip"
#mange "kubernetes" "kubernetes" 18000 "zip"
#mange "metabase" "metabase" 18000 "zip"
mange "apache" "airflow" 18000 "zip"
#mange "pytorch" "pytorch" 18000 "zip"

cd /data2/mvdata
git add .
git commit -am 'data'
git push
